<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.graylog</groupId>
    <artifactId>graylog-project</artifactId>
    <version>2.5.1</version>
    <packaging>pom</packaging>

    <scm>
        <connection>scm:git:git@github.com:Graylog2/graylog-project.git</connection>
        <developerConnection>scm:git:git@github.com:Graylog2/graylog-project.git</developerConnection>
        <url>https://github.com/Graylog2/graylog-project</url>
        <tag>HEAD</tag>
    </scm>

    <modules>
        <module>runner</module>

        <module>../graylog-project-repos/graylog2-server</module>
        <module>../graylog-project-repos/graylog-plugin-map-widget</module>
        <module>../graylog-project-repos/graylog-plugin-pipeline-processor</module>
        <module>../graylog-project-repos/graylog-plugin-collector</module>
        <module>../graylog-project-repos/graylog-plugin-enterprise-integration</module>
        <module>../graylog-project-repos/graylog-plugin-beats</module>
        <module>../graylog-project-repos/graylog-plugin-aws</module>
        <module>../graylog-project-repos/graylog-plugin-threatintel</module>
        <module>../graylog-project-repos/graylog-plugin-netflow</module>
        <module>../graylog-project-repos/graylog-plugin-cef</module>
		<module>../graylog-project-repos/graylog-plugin-custom</module>
        
    </modules>

    <properties>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.useIncrementalCompilation>false</maven.compiler.useIncrementalCompilation>
        <maven.build.timestamp.format>yyyyMMddHHmmss</maven.build.timestamp.format>
        <maven.source.skip>true</maven.source.skip>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <maven.install.skip>true</maven.install.skip>
        <maven.deploy.skip>true</maven.deploy.skip>
        <maven.site.skip>true</maven.site.skip>

        <!-- to work around filtering bug, which makes maven.build.timestamp inaccessible -->
        <build.timestamp>${maven.build.timestamp}</build.timestamp>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.graylog2</groupId>
            <artifactId>graylog2-server</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-map-widget</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-pipeline-processor</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-collector</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-enterprise-integration</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-beats</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-aws</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-threatintel</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-netflow</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-cef</artifactId>
            <version>2.5.1</version>
        </dependency>
        <dependency>
            <groupId>org.graylog.plugins</groupId>
            <artifactId>graylog-plugin-cef</artifactId>
            <version>2.5.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>generate-project-server-artifact</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <attach>false</attach>
                    <appendAssemblyId>false</appendAssemblyId>
                    <ignoreMissingDescriptor>true</ignoreMissingDescriptor>
                    <finalName>graylog-${project.version}-${maven.build.timestamp}</finalName>
                    <descriptors>
                        <descriptor>src/main/assembly/server-tarball.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>2.11</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <finalName>graylog-${project.version}</finalName>
                        </configuration>
                  </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

